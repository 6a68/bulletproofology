/* http://www.fontspring.com/blog/further-hardening-of-the-bulletproof-syntax */
@font-face {
  font-family: 'Open Sans';
  src: url('/fonts/en/opensans-regular.eot'); /* IE9 Compat Modes */
  src: url('/fonts/en/opensans-regular.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */
       url('/fonts/en/opensans-regular.woff') format('woff'), /* Modern Browsers */
       url('/fonts/en/opensans-regular.ttf')  format('truetype'), /* Safari, Android, iOS */
       url('/fonts/en/opensans-regular.svg#svgFontName') format('svg'); /* Legacy iOS */
  }
